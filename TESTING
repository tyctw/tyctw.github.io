                    },
                    english: {
                        required: "請選擇英文成績",
                        notEqual: "請選擇英文成績"
                    },
                    math: {
                        required: "請選擇數學成績",
                        notEqual: "請選擇數學成績"
                    },
                    science: {
                        required: "請選擇自然成績",
                        notEqual: "請選擇自然成績"
