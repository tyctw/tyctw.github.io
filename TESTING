            function calculatePoints(scores) {
                const gradeValues = {
                    'A++': 7, 'A+': 6, 'A': 5, 'B++': 4, 'B+': 3, 'B': 2, 'C': 1
                };
                let total = 0;
                for (let subject in scores) {
                    if (subject !== 'composition') {
                        total += gradeValues[scores[subject]];
                    }
                }
                return total;
            }

            function calculatePoints2(scores) {
                const gradeValues = {
                    'A++': 6, 'A+': 6, 'A': 6, 'B++': 4, 'B+': 4, 'B': 4, 'C': 2
                };
                const compositionValues = {
                    '6': 3, '5': 3, '4': 3, '3': 2, '2': 2, '1': 1, '0': 0
                };
                let total = 0;
                for (let subject in scores) {
                    if (subject !== 'composition') {
                        total += gradeValues[scores[subject]];
                    } else {
                        total += compositionValues[scores[subject]];
                    }
                }
                return total;
            }

            function getEligibleSchools(scores, schoolType, vocationalGroup, vocationalDept, schoolOwnership) {
                const totalPoints = calculatePoints(scores);
                const totalCredits = calculatePoints2(scores);
                
                return schools.filter(school => {
                    if (schoolType !== 'all' && school.type !== schoolType) return false;
                    if (schoolOwnership !== 'all' && school.ownership !== schoolOwnership) return false;
                    if (school.type === "職業類科") {
                        if (vocationalGroup !== 'all' && (!school.vocationalGroups || !school.vocationalGroups.includes(vocationalGroup))) return false;
                        if (vocationalDept !== "all" && vocationalDept && (!school.departments || !school.departments.includes(vocationalDept))) return false;
                    }
                    return totalCredits >= school.minCredits && totalPoints >= school.minPoints;
                });
            }

            $.validator.addMethod("notEqual", function(value, element, param) {
                return this.optional(element) || value != param;
            }, "請選擇一個選項");

            $('#scoreForm').validate({
                rules: {
                    chinese: {
                        required: true,
                        notEqual: ""
                    },
                    english: {
                        required: true,
                        notEqual: ""
                    },
                    math: {
                        required: true,
