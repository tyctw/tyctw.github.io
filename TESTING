                '食品群': ['食品加工科', '食品科', '水產食品科', '烘焙科'],
                '家政群': ['家政科', '服裝科', '幼兒保育科', '美容科', '時尚模特兒科', '流通服飾科', '時尚造型科', '照顧服務科'],
                '餐旅群': ['觀光事業科', '餐飲管理科']
